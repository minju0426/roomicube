<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/greyish_brown_two</item>
        <item name="colorPrimaryDark">@color/black_two</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fontFamily">@font/notosanscjkkr_black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/notosanscjkkr_bold</item>
    </style>

    <style name="Edit_text" parent="@android:style/TextAppearance.DeviceDefault.Widget.EditText">
        <item name="android:fontFamily">@font/notosanscjkkr_black</item>
    </style>

    <style name="Edit_text2" parent="@android:style/TextAppearance.Material">
        <item name="android:fontFamily">@font/notosanscjkkr_black</item>
    </style>

</resources>